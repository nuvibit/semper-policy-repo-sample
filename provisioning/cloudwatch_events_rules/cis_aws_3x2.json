{
  "metaData" : {
    "version": "1.0.0",
    "type": "cloudwatch_event_rule",
    "title": "CIS AWS 3.2: Management Console sign-in without MFA",
    "description": "",
    "owner" : {
      "Name" : "Mickey Mouse",
      "Email" : "mickey.mouse@nuvibit.com"
    }
  },
  "provisioning" : {
    "regions" : {
      "exclude":  [
        "*"
      ],
      "includeAnyhow": [
        "us-east-1"
      ]      
    },
    "excludeByCallerContext" : {},
    "eventSettings": {  
      "eventName": "foundation-cis.aws.3.2-signin-without-mfa-1",
      "eventDescription": "CIS AWS 3.2 - Detect console signin without MFA events",
      "eventPattern": {
        "detail-type": [
          "AWS Console Sign In via CloudTrail"
        ],
          "detail": {
            "eventName": [
              "ConsoleLogin"
            ],
          "errorMessage": [
            {
              "anything-but": "Failed authentication"
            }
          ],
          "additionalEventData": {
            "MFAUsed": [
              "No"
            ],
            "SamlProviderArn": [
              {
                "exists": false
              }
            ]
          }
        }
      }
    }
  },
  "postDetectionEnrichment" : {
    "customerSeverity" : "high"
  },
  "auditing" : {
    "lastAttestationDate" : "20210808",
    "auditor" : {
      "Name" : "Donald Duck",
      "Email" : "donald.duck@nuvibit.com"
    }
  }
}