{
  "metaData": {
    "version": "1.0.0",
    "type": "configure_eventbridge_rule",
    "title": "CIS AWS 3.2: Management Console sign-in without MFA",
    "description": [],
    "owner": {
      "Name": "Mickey Mouse",
      "Email": "mickey.mouse@nuvibit.com"
    }
  },
  "configure": {
    "policyScope": {
      "accountScope": {
        "exclude": {
          "accountId": [
            "678856817733"
          ]
        }
      },
      "regionScope": {
        "exclude": [
          "*"
        ],
        "forceInclude": [
          "us-east-1"
        ]
      }
    },
    "eventSettings": {
      "eventName": "cis.aws.3.2-signin-without-mfa-1",
      "eventDescription": "CIS AWS 3.2 - Detect console signin without MFA events",
      "eventPattern": {
        "detail-type": [
          "AWS Console Sign In via CloudTrail"
        ],
        "detail": {
          "eventName": [
            "ConsoleLogin"
          ],
          "errorMessage": [
            {
              "anything-but": "Failed authentication"
            }
          ],
          "additionalEventData": {
            "MFAUsed": [
              "No"
            ],
            "SamlProviderArn": [
              {
                "exists": false
              }
            ]
          }
        }
      }
    }
  },
  "eventEnrichment": {
    "customerSeverity": "high"
  },
  "auditing": {
    "lastAttestationDate": "20210808",
    "auditor": {
      "Name": "Donald Duck",
      "Email": "donald.duck@nuvibit.com"
    }
  }
}