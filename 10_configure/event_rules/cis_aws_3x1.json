    "title": "CIS AWS 3.1: Unauthorized API calls",
    "description": [],
    "owner": {
      "name": "Mickey Mouse",
      "email": "mickey.mouse@nuvibit.com"
    }
  },
  "configure": {
    "policyScope": {
      "accountScope": {
        "exclude": {
          "accountId": [],
          "ouId": [],
          "accountTags": {}
        },
        "forceInclude": {
          "accountId": [],
          "ouId": [],
          "accountTags": {}
        }
      },
      "regionScope": {
        "exclude": [],
        "forceInclude": [
          "us-east-1"
        ]
      }
    },
    "eventSettings": {
      "eventName": "cis.aws.3.1-unauthorized-activity-attempt",
      "eventDescription": "CIS AWS 3.1 - Detect unauthorized activity attempt events",
      "eventPattern": {
        "detail": {
          "errorCode": [
            {
              "prefix": "AccessDenied"
            },
            "Client.UnauthorizedOperation"
          ]
        }
      }
    }
  },
  "eventEnrichment": {
    "customerSeverity": "Low"
  },
  "auditing": {
    "lastAttestationDate": "20210808",
