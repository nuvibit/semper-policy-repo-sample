{
  "metaData": {
    "version": "1.0.0",
    "type": "configure_eventbridge_rule",
    "title": "CIS AWS 3.3: Usage of 'root' account",
    "description": [],
    "owner": {
      "name": "Mickey Mouse",
      "email": "mickey.mouse@nuvibit.com"
    }
  },
  "configure": {
    "policyScope": {
      "accountScope": {
        "exclude": "*",
        "forceInclude": {
          "accountId": [],
          "ouId": [],
          "accountTags": {}
        }
      },
      "regionScope": {
        "exclude": [],
        "forceInclude": [
          "us-east-1"
        ]
      }
    },
    "eventSettings": {
      "eventName": "cis.aws.3.3-detect-usage-of-root",
      "eventDescription": "CIS AWS 3.3 - Detect usage of 'root' account",
      "eventPattern": {
        "detail-type": [
          "AWS API Call via CloudTrail",
          "AWS Console Sign In via CloudTrail"
        ],
        "detail": {
          "userIdentity": {
            "type": [
              "Root"
            ]
          }
        }
      }
    }
  },
  "eventEnrichment": {
    "customerSeverity": "Critical"
  },
  "auditing": {
    "lastAttestationDate": "20210808",
