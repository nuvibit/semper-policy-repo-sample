{
  "metaData": {
    "version": "1.0.0",
    "domain": "configure",
    "type": "eventbridge_rule",
    "title": "Custom Control: Detect OU create, update, delete",
    "description": [],
    "owner": {
      "name": "Mickey Mouse",
      "email": "mickey.mouse@nuvibit.com"
    }
  },
  "configure": {
    "policyScope": {
      "accountScope": {
        "exclude": "*",
        "forceInclude": {
          "accountTags": {
            "AccountName" : [
              "Core Org Management"
            ]
          }
        }
      },
      "regionScope": {
        "exclude": "*",
        "forceInclude": [
          "us-east-1"
        ]
      }
    },
    "eventSettings": {
      "eventName": "ou-created",
      "eventDescription": "Custom Control - Detect OU create, update, delete",
      "eventPattern": {
        "detail": {
          "eventName": [
            "CreateOrganizationalUnit",
            "UpdateOrganizationalUnit",
            "DeleteOrganizationalUnit"
          ],
          "eventSource": [
            "organizations.amazonaws.com"
          ]
        }
      }
    }
  },
  "eventEnrichment": {
    "customerSeverity": "High"
  },
  "auditing": {
    "lastAttestationDate": "20210808",
    "auditor": {
      "name": "Donald Duck",
      "email": "donald.duck@nuvibit.com"
    }
  }
}